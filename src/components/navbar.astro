---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Survey', href: '/survey' },
  { name: 'Interviews', href: '/interviews' },
  { name: 'Alumni', href: '/alumni' },
  { name: 'Events', href: '/events' },
];
---

<header class="sticky top-6 z-50 mx-auto w-[95%] rounded-2xl border border-gray-100 backdrop-blur-md shadow-[0_8px_30px_rgb(0,0,0,0.12)] transition-all my-1 relative" style="background-color:#EA4726;">
  
  <div class="flex h-20 items-center justify-between px-6 lg:px-10">
    
    <div class="flex items-center gap-4">
      <a href="/" class="group flex items-center gap-2 text-xl font-bold transition">
        <span class="text-5xl text-black transition-colors duration-300 group-hover:text-[#ffffff]">EEA</span>
      </a>
    </div>

    <div class="hidden flex-1 items-center justify-center px-8 md:flex">
      <div class="relative w-full max-w-md">
        <label for="search" class="sr-only">Search</label>
        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4">
          <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <input
          type="search"
          id="search-input"
          class="block w-full rounded-full border border-gray-200 bg-gray-50 py-2.5 pl-12 pr-4 text-sm text-gray-900 placeholder-gray-500 shadow-inner transition-all focus:border-[#EA4726] focus:bg-white focus:outline-none focus:ring-1 focus:ring-[#EA4726]"
          placeholder="Search interviews, alumni..."
        />
      </div>
    </div>

    <div class="flex items-center gap-6">
      <nav class="hidden md:flex gap-8">
        {navLinks.map((link) => (
          <a href={link.href} class="text-lg font-bold text-black transition-colors duration-300 hover:text-[#ffffff]">
            {link.name}
          </a>
        ))}
      </nav>

      <button
        id="mobile-menu-btn"
        class="block rounded p-2 text-black transition hover:text-white md:hidden"
      >
        <span class="sr-only">Toggle menu</span>
        <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden absolute top-full left-0 w-full rounded-b-2xl border-t border-gray-100 bg-white md:hidden shadow-xl z-50">
    <div class="p-6 space-y-4">
      <input
        type="search"
        class="block w-full rounded-lg border border-gray-200 bg-gray-50 p-3 text-base text-gray-900 focus:border-[#EA4726] focus:outline-none focus:ring-1 focus:ring-[#EA4726]"
        placeholder="Search..."
      />
      <nav class="flex flex-col gap-3">
        {navLinks.map((link) => (
          <a href={link.href} class="block rounded-lg px-4 py-2 text-lg font-bold text-black hover:bg-gray-50 hover:text-[#EA4726]">
            {link.name}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile Menu Logic
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }

  // --- SEARCH LOGIC START ---
  // Select all search inputs (Desktop & Mobile)
  const searchInputs = document.querySelectorAll('input[type="search"]');

  searchInputs.forEach(input => {
    input.addEventListener('keydown', (e) => {
      // We check for "Enter" key
      if (e.key === 'Enter') {
        const target = e.target;
        const term = target.value.trim();
        
        if (term) {
          // Redirect to the search page with the query in the URL
          window.location.href = `/search?q=${encodeURIComponent(term)}`;
        }
      }
    });
  });
  // --- SEARCH LOGIC END ---
</script>