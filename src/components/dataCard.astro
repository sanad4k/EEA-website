---
const { post } = Astro.props;
---

<a href={`/data/${post.slug}`} class="group relative block h-full bg-white rounded-xl border border-gray-200 p-6 shadow-sm transition-all hover:shadow-md hover:border-gray-300">
  
  <div class="absolute top-4 right-4">
    <span class={`px-3 py-1 text-xs font-bold uppercase tracking-wide rounded-full ${
      post.data.category === 'interview' ? 'bg-blue-100 text-blue-700' : 'bg-purple-100 text-purple-700'
    }`}>
      {post.data.category}
    </span>
  </div>

  <div class="mt-2">
    <p class="text-sm font-medium text-gray-500">{post.data.company}</p>
    <h3 class="mt-2 text-xl font-bold text-gray-900 group-hover:text-[#EA4726] transition-colors">
      {post.data.title}
    </h3>
    <p class="mt-2 text-sm text-gray-600">
      By <span class="font-semibold">{post.data.candidateName}</span> â€¢ {post.data.role}
    </p>
    <div class="mt-4 flex flex-wrap gap-2">
      {post.data.tags.map(tag => (
        <span class="px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-md">#{tag}</span>
      ))}
    </div>
  </div>
</a>